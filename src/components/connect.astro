<div class="flex justify-center px-4 bg-black">
  <form class="grid grid-cols-2 max-w-xl w-full gap-4 mt-8  p-6 rounded-xl shadow-lg">
    <input class="input-field xsm:col-span-1 col-span-2" placeholder="Full Name" type="text" required />
    <input class="input-field xsm:col-span-1 col-span-2" placeholder="E-mail" type="email" required />
    <input class="input-field col-span-2" placeholder="Subject" type="text" />
    <textarea
      class="input-field col-span-2 h-32 resize-none"
      placeholder="Message"
      name="message"
      required
    ></textarea>
    <button
      type="submit"
      class="col-span-2 bg-[#D47E53] text-white py-2 rounded-md hover:bg-[#ce7345] transition duration-200 font-semibold"
    >
      Send Message
    </button>
  </form>
</div>
